<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="PodWave_Player.MainWindow"
        Title="PodWave" Height="800" Width="800"
        >
    <Border BorderBrush="#FFD5FF" BorderThickness="4" CornerRadius="15" Margin="0,10,0,5">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#D4B4E2" Offset="0.0"/>
                <GradientStop Color="#8663AC" Offset="0.5"/>
                <GradientStop Color="#EFE1F3" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="6,6,6,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <!-- Video and control -->
                <ColumnDefinition Width="209"/>
                <!-- Metadaa-->
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <!-- topbar -->
                    <RowDefinition Height="*"/>
                    <!-- Videogrid -->
                    <RowDefinition Height="Auto"/>
                    <!-- progressbar -->
                    <RowDefinition Height="53"/>
                    <!-- Controlpanel -->
                </Grid.RowDefinitions>

                <!-- top-panel -->
                <DockPanel Grid.Row="0" LastChildFill="True">
                    <Border CornerRadius="15,15,15,15"  Background="#EFE1F3" BorderThickness="0" Width="561">
                        <DockPanel VerticalAlignment="Center" Height="35" Margin="-9,0,-120,0">
                            <Image Source="Assets/podwaveicon.ico" Width="32" Height="33" Margin="15,0,15,0"/>
                            <TextBlock Text="PodWave" FontFamily="Harlow Solid Italic" FontSize="30" Foreground="#8663AC" FontWeight="Bold" Width="608"/>

                        </DockPanel>
                    </Border>
                </DockPanel>

                <!-- Videogrid -->
                <Border Background="#EFE1F3" Grid.Row="1" CornerRadius="10" Margin="0,9,0,31" HorizontalAlignment="Left" Width="554" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.257"/>
                            <RotateTransform/>
                            <TranslateTransform Y="1.496"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <MediaElement x:Name="player" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Uniform" RenderTransformOrigin="0.344,0.502" Margin="0,0,0,0" HorizontalAlignment="Left" Width="560">
                        <MediaElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.173"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </MediaElement.RenderTransform>
                    </MediaElement>

                </Border>

                <!-- progressbar -->
                <Slider x:Name="ProgressSlider" Grid.Row="1" Margin="0,633,10,10"
                        Minimum="0" Maximum="100" Value="0" 
                        Background="#EFE1F3" 
                        Foreground="#8663AC" 
                        MouseDown="ProgressSlider_MouseDown"/>

                <!-- controllbar -->
                <Border Background="#D4B4E2" Grid.Row="3" CornerRadius="15" Margin="0,0,0,4">
                    <DockPanel Margin="5,0,0,0">
                        <Button Content="⏮" Style="{StaticResource RoundButtonStyle}" Click="Previous_Click" />
                        <Button Content=" ▶" Style="{StaticResource RoundButtonStyle}" Click="PlayButton_Click"/>
                        <Button Content="⏭" Style="{StaticResource RoundButtonStyle}" Click="Next_Click"/>
                        <Button Content="⏹" Style="{StaticResource RoundButtonStyle}" Click="StopButton_Click"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,10,0">
                            <TextBlock Text="🔊" Foreground="#8663AC" VerticalAlignment="Center" Margin="5" Height="19" Width="19"/>
                            <Slider x:Name="VolumeSlider" Minimum="0" Maximum="1" Value="0.5" Width="142" Margin="0,7,0,0"
                                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                                    ValueChanged="VolumeSlider_ValueChanged" RenderTransformOrigin="0.495,0.673"/>
                        </StackPanel>
                        <Button Content="🗁 RSS-Feed" Style="{StaticResource RoundButtonStyle}" Click="Select_Folder" FontSize="15" FontWeight="Bold" Width="160" Foreground="White" Background="#7D57A6" Margin="0,5,0,5"/>
                    </DockPanel>
                </Border>
            </Grid>

            <!-- Metadata -->
            <Border Grid.Column="1" Background="#EFE1F3" CornerRadius="10" Margin="10,43,10,444">
                <StackPanel Margin="10">
                    <TextBlock Text="currently playing" FontFamily="Harlow Solid Italic" FontSize="22" FontWeight="Bold" Foreground="#8663AC"/>
                    <TextBlock Text="Titel:" Foreground="#8663AC"/>
                    <TextBlock x:Name="MetaTitle" Text="-" Foreground="#8663AC"/>
                    <TextBlock Text="Dauer:" Foreground="#8663AC"/>
                    <TextBlock x:Name="MetaDuration" Text="-" Foreground="#8663AC"/>
                    <TextBlock Text="idc:" Foreground="#8663AC"/>
                    <TextBlock x:Name="PodcastDescriptionTextBlock" Text="-" Foreground="#8663AC" Height="22" RenderTransformOrigin="0.5,0.5"/>
                    <TextBox
         x:Name="Description" Foreground="#8663AC" Background="#EFE1F3" FontSize="12"/>
                </StackPanel>

            </Border>

            <!--Playlist-->
            <Border Grid.Column="1" Background="#EFE1F3" CornerRadius="10" Margin="10,310,10,10" Height="573" VerticalAlignment="Top">
                <StackPanel Margin="10,10,10,-252">
                    <TextBlock Text="Playlist" FontFamily="Harlow Solid Italic" FontSize="22" FontWeight="Bold" Foreground="#8663AC" Height="22"/>
                    <ListBox 
                        x:Name="PodcastList" ItemsSource="{Binding Videos}"
                         SelectionChanged="PodcastList_SelectionChanged"
                         DisplayMemberPath="Title"
                         Background="#EFE1F3"
                         Foreground="#8663AC"
                         Height="247"
                         />


                </StackPanel>

            </Border>
            <StackPanel Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True" Margin="94,6,20,711" Width="95" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <Button x:Name="BTN_Minimize" Content="🗕" Style="{StaticResource ControlButtonStyle}" Click="BTN_Minimize_Click" Width="21"/>
                <Button x:Name="BTN_Maximize" Content="🗖" Style="{StaticResource ControlButtonStyle}" Click="BTN_Maximize_Click" RenderTransformOrigin="0.613,0.377"/>
                <Button x:Name="BTN_Close" Content="✕" Style="{StaticResource ControlButtonStyle}" Click="BTN_Close_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>

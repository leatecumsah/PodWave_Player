<Window x:Class="PodWave_Player.RssFeedInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RSS-Feed hinzufügen" Height="150" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Bitte gib die RSS-Feed-URL ein:" Margin="0,0,0,5"/>
            <TextBox x:Name="FeedUrlBox" Height="25" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Abbrechen" Click="Cancel_Click" Margin="0,0,5,0"/>
                <Button Content="Hinzufügen" Click="Add_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
